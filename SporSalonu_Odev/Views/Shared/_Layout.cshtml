<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shine GYM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SporSalonu_Odev.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark box-shadow mb-3 py-3"
             style="position: absolute; top: 0; left: 0; width: 100%; z-index: 999; background: transparent !important; border: none;">

            <div class="container">
                <a class="navbar-brand fw-bolder d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.8rem; letter-spacing: 1px;">
                    <span style="color: white; text-shadow: 0 0 10px rgba(248, 165, 194, 0.5);">✨ Shine</span>
                    <span style="color: #f8a5c2;">GYM</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="border: none;">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 justify-content-center mx-auto">
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white text-uppercase fw-bold small" asp-controller="Home" asp-action="Hakkimizda">HAKKIMIZDA</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white text-uppercase fw-bold small" asp-controller="Home" asp-action="Antrenorler">ANTRENÖRLER</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white text-uppercase fw-bold small" asp-controller="SalonHizmeti" asp-action="Program">SEANSLAR</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white text-uppercase fw-bold small" asp-controller="YapayZeka" asp-action="Index">AI ANTRENÖR</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.Identity.Name == "G221210064@sakarya.edu.tr")
                            {
                                <li class="nav-item mx-2">
                                    <a class="nav-link text-white text-uppercase fw-bold small" asp-controller="SalonHizmeti" asp-action="Index">HİZMETLER (Yönetici)</a>
                                </li>
                            }

                            <li class="nav-item ms-3">
                                <a class="nav-link text-white text-uppercase fw-bold small px-3 rounded-pill shadow-sm"
                                   style="background-color: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.4);"
                                   asp-controller="Randevu" asp-action="Index">
                                     Randevularım
                                </a>
                            </li>
                        }

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold small" asp-controller="Hesap" asp-action="Cikis">Çıkış Yap</a>
                            </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold small" asp-controller="Hesap" asp-action="Cikis">Çıkış Yap</a>
                                </li>

                                <li class="nav-item ms-2 d-flex align-items-center">
                                    <span class="badge bg-white shadow-sm px-3 py-2 rounded-pill text-uppercase" style="color: #f8a5c2; font-size: 0.8rem; letter-spacing: 0.5px;">
                                         Hoşgeldin @User.Identity?.Name?.Split('@')[0]
                                    </span>
                                </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold small" asp-controller="Hesap" asp-action="Giris">Giriş</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-light btn-sm fw-bold px-3 rounded-pill" style="color: #f8a5c2;" asp-controller="Hesap" asp-action="Kayit">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-4 mt-auto" style="background-color: #fff; border-top: 1px solid #ffeef2; position: relative; z-index: 10;">
        <div class="container text-center">
            <span class="fw-bold" style="color: #f8a5c2;">&copy; 2025 Shine GYM</span>
            <span class="mx-2" style="color: #eee;">|</span>
            <span class="small text-muted fst-italic">Senin Işıltın, Senin Gücün. ✨</span>

            <div class="mt-2">
                <i class="bi bi-instagram mx-2" style="color: #f8a5c2; cursor: pointer;"></i>
                <i class="bi bi-twitter mx-2" style="color: #f8a5c2; cursor: pointer;"></i>
                <i class="bi bi-youtube mx-2" style="color: #f8a5c2; cursor: pointer;"></i>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>