@model SporSalonu_Odev.Models.YapayZekaModel
@{
    ViewData["Title"] = "AI Analiz Sonucu";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: #9733ee;">✨ Shine GYM AI Tavsiyesi</h2>
        <p class="text-muted">Senin için özel olarak oluşturuldu.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-3">
            <div class="card shadow border-0 bg-light text-center h-100">
                <div class="card-body p-4">
                    <div class="mb-3">
                        <i class="bi bi-person-bounding-box display-4 text-secondary"></i>
                    </div>
                    <h4 class="mb-1">@Model.Cinsiyet</h4>
                    <p class="mb-3">@Model.Boy cm / @Model.Kilo kg</p>
                    <span class="badge bg-dark fs-5 px-3 py-2">Hedef: @Model.Hedef</span>

                    <hr class="my-4" />

                    <h5 class="text-muted">Hesaplanan VKİ</h5>
                    <h1 class="fw-bold text-primary">@Model.VkiSonuc</h1>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-3">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header text-white" style="background: linear-gradient(to right, #da22ff, #9733ee);">
                    <h5 class="mb-0">🤖 Antrenörün Diyor ki:</h5>
                </div>
                <div class="card-body p-4">
                    <div class="fs-5" style="line-height: 1.8; white-space: pre-wrap;">
                        @Model.OneriProgrami
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-primary w-100">🔄 Yeni Analiz Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
