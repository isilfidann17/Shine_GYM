@{
    ViewData["Title"] = "AI Antrenör";
}

<div class="position-relative w-100 d-flex align-items-center justify-content-center flex-column text-center" 
     style="background: linear-gradient(135deg, #5d4a52 0%, #f8a5c2 100%); height: 350px; margin-top: -100px; padding-top: 80px; border-bottom-left-radius: 50px; border-bottom-right-radius: 50px;">
    
    <div class="position-relative z-index-2 animate-up">
        <div class="bg-white rounded-circle p-3 shadow-lg d-inline-block mb-3" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center;">
            <span style="font-size: 3.5rem;">🤖</span>
        </div>
        <h1 class="display-4 fw-bold text-white mb-2" style="text-shadow: 0 4px 10px rgba(0,0,0,0.2);">Shine GYM AI</h1>
        <p class="text-white-50 fs-5">Senin Kişisel Yapay Zeka Koçun</p>
    </div>

    <div class="position-absolute top-0 start-0 w-100 h-100 overflow-hidden" style="opacity: 0.1;">
        <div class="position-absolute bg-white rounded-circle" style="width: 200px; height: 200px; top: -50px; left: -50px;"></div>
        <div class="position-absolute bg-white rounded-circle" style="width: 150px; height: 150px; bottom: 20px; right: 10%;"></div>
    </div>
</div>

<div class="container" style="margin-top: -60px; position: relative; z-index: 10;">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger shadow-sm border-0 rounded-4 mb-4 text-center">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Hata
                </div>
            }

            @if (ViewBag.Cevap != null)
            {
                 <div class="card shadow-lg border-0 rounded-4 mb-5 overflow-hidden">
                    <div class="card-header text-white text-center py-4" style="background-color: #5d4a52;">
                        <h3 class="m-0 fw-bold">✨ İşte Sana Özel Programın! ✨</h3>
                    </div>
                    <div class="card-body p-5 bg-white">
                        <div class="fs-6 text-dark" style="white-space: pre-line; line-height: 1.8;">
                            @Html.Raw(ViewBag.Cevap)
                        </div>
                        
                         <div class="text-center mt-5 pt-4 border-top">
                             <h6 class="text-muted mb-3">Beğenmedin mi? Tekrar deneyelim! 👇</h6>
                             <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4 py-2">
                                 🔄 Yeni Analiz Yap
                             </a>
                         </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-lg rounded-4 p-5 border-0 bg-white">
                    <form asp-action="Olustur" method="post" enctype="multipart/form-data">

                        <div class="alert alert-info border-0 rounded-3 small text-center mb-4">
                            <i class="bi bi-stars me-1"></i> <strong>Gemini Vision Teknolojisi:</strong> Fotoğrafını yükle, Gemini seni analiz etsin ve hayalindeki vücudu çizsin!
                        </div>

                        <div class="row g-4">
                            <div class="col-12">
                                <label class="fw-bold form-label">Fotoğrafını Seç</label>
                                <input type="file" name="resimDosyasi" class="form-control form-control-lg rounded-pill" required accept="image/png, image/jpeg">
                            </div>

                            <div class="col-12">
                                <label class="fw-bold form-label">Nasıl Bir Değişim İstiyorsun?</label>
                                <select name="hedef" class="form-select form-select-lg rounded-pill" style="cursor: pointer;">
                                    <option value="KasYap">💪 Hulk Modu (Devasa Kaslar)</option>
                                    <option value="KiloVer">🏃‍♀️ Fit & Atletik (Sıkılaşmış)</option>
                                </select>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn w-100 py-3 text-white fw-bold rounded-pill shadow"
                                        style="background: linear-gradient(90deg, #434343, #000000); border: none; font-size: 1.1rem;">
                                    ✨ GEMINI İLE DÖNÜŞTÜR
                                </button>
                            </div>
                        </div>
                    </form>
                    <p class="text-center text-muted mt-4 small mb-0 opacity-50">Powered by Google Gemini & Pollinations AI</p>
                </div>
            
            }
        </div>
    </div>
</div>

<style>
  
    .hover-effect:hover {
        transform: scale(1.02);
        transition: 0.3s;
        box-shadow: 0 10px 20px rgba(248, 165, 194, 0.4) !important;
    }
</style>