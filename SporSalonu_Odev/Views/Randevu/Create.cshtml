@model SporSalonu_Odev.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<div style="background-color: #f8a5c2; padding-top: 100px; padding-bottom: 30px; margin-top: -50px; margin-bottom: 30px; border-bottom-left-radius: 30px; border-bottom-right-radius: 30px;">
    <div class="container text-center">
        <h2 class="text-white fw-bold m-0" style="text-shadow: 0 2px 5px rgba(0,0,0,0.1);">📅 Kendine Zaman Ayır</h2>
        <p class="text-white m-0 small opacity-75">Hayalindeki değişime bir adım kaldı!</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4" style="margin-top: -50px;">
                <div class="card-body p-5">

                    <form asp-action="Create">

                        <div class="form-group mb-4">
                            <label class="fw-bold text-secondary mb-1">Eğitmen Seç</label>
                            <select asp-for="EgitmenId" class="form-control form-select rounded-pill border-2" asp-items="ViewBag.EgitmenId" style="border-color: #ffeef2;">
                                <option value="">-- Bir Eğitmen Seç --</option>
                            </select>
                        </div>

                        <div class="form-group mb-4">
                            <label class="fw-bold text-secondary mb-1">Hizmet Seç</label>
                            <select asp-for="HizmetId" class="form-control form-select rounded-pill border-2" asp-items="ViewBag.HizmetId" style="border-color: #ffeef2;">
                                <option value="">-- Ders Türü Seç --</option>
                            </select>
                        </div>

                        <div class="form-group mb-4">
                            <label class="fw-bold text-secondary mb-1">Tarih ve Saat</label>
                            <input asp-for="TarihSaat" class="form-control rounded-pill border-2" type="datetime-local" style="border-color: #ffeef2;" />
                            <span asp-validation-for="TarihSaat" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-lg text-white fw-bold shadow-sm" style="background-color: #f8a5c2; border-radius: 50px;">
                                Randevuyu Onayla ✅
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>