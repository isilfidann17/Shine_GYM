@model IEnumerable<SporSalonu_Odev.Models.Egitmen>

@{
    ViewData["Title"] = "Eğitmenlerimiz";
}

<div style="position: relative; height: 50vh; width: 100%; display: flex; align-items: center; justify-content: center; margin-top: -1.5rem; overflow: hidden;">

    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;
                background: url('https://images.unsplash.com/photo-1571902943202-507ec2618e8f?q=80&w=2075&auto=format&fit=crop') no-repeat center center / cover;
                z-index: 0;">
    </div>

    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(248, 165, 194, 0.6); z-index: 1;"></div>

    <div class="text-center position-relative" style="z-index: 2;">
        <h1 class="display-3 fw-bold text-white title-shadow">Eğitmenlerimiz</h1>
        <p class="fs-4 text-white">Seni Hedeflerine Taşıyacak Güçlü Ekip 💪💖</p>
    </div>
</div>

<div class="container py-5" style="margin-top: -50px; position: relative; z-index: 3;">

    @if (User.Identity?.Name == "G221210064@sakarya.edu.tr")
    {
        <div class="text-end mb-3">
            <a asp-controller="Egitmen" asp-action="Index" class="btn btn-sm btn-light text-muted shadow-sm rounded-pill px-3">
                <i class="bi bi-gear-fill"></i> Yönetici Paneli
            </a>
        </div>
    }

    <div class="row g-4 justify-content-center">

        @if (!Model.Any())
        {
            <div class="col-12 text-center p-5 bg-white rounded-4 shadow-sm">
                <i class="bi bi-emoji-frown display-4 text-muted"></i>
                <h4 class="mt-3 text-muted">Henüz sisteme eğitmen eklenmemiş.</h4>
                <p>Yönetici panelinden yeni eğitmenler ekleyebilirsiniz.</p>
                <a asp-controller="Egitmen" asp-action="Create" class="btn btn-primary mt-2">Hemen Ekle</a>
            </div>
        }
        else
        {
            @foreach (var hoca in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="trainer-card bg-white text-center p-4 h-100 shadow-sm">
                        <div class="trainer-img-wrapper mb-3">
                            <img src="@(string.IsNullOrEmpty(hoca.FotoUrl) ? "https://cdn-icons-png.flaticon.com/512/4140/4140047.png" : hoca.FotoUrl)"
                                 alt="@hoca.AdSoyad" class="img-fluid rounded-circle">
                        </div>

                        <h3 class="h5 fw-bold mb-1" style="color: #5d4a52;">@hoca.AdSoyad</h3>

                        <span class="badge rounded-pill mb-2 mt-1" style="background-color: #ffeef2; color: #f8a5c2;">
                            @hoca.Uzmanlik
                        </span>

                        <p class="text-muted small fst-italic mt-2 mb-2">
                            "@(string.IsNullOrEmpty(hoca.Aciklama) ? "Birlikte başaracağız!" : hoca.Aciklama)"
                        </p>

                        <hr style="border-top: 1px dashed #f8a5c2; opacity: 0.5;">

                        <div class="text-start small text-muted">
                            <p class="mb-1"><i class="bi bi-lightning-fill text-warning"></i> <strong>Hizmet:</strong> @hoca.HizmetTurleri</p>
                            <p class="mb-0"><i class="bi bi-clock-fill" style="color:#f8a5c2;"></i> <strong>Saatler:</strong> @hoca.Musaitlik</p>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .title-shadow {
        text-shadow: 2px 2px 10px rgba(0,0,0,0.2);
    }

    .trainer-card {
        border-radius: 25px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #fff0f5;
    }

        .trainer-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(248, 165, 194, 0.2) !important;
        }

    .trainer-img-wrapper img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border: 4px solid #f8a5c2;
        padding: 3px;
        background-color: #fff;
    }
</style>