@model SporSalonu_Odev.Models.Seans

@{
    ViewData["Title"] = "Program Oluştur";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 p-4">
                <h3 class="text-center fw-bold text-primary mb-4">📅 Tabloya Ders Ekle</h3>

                <form asp-action="SeansEkle">
                    <div class="mb-3">
                        <label class="fw-bold">Gün Seç</label>
                        <select asp-for="Gun" asp-items="ViewBag.Gunler" class="form-control form-select"></select>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Saat Seç</label>
                        <select asp-for="Saat" asp-items="ViewBag.Saatler" class="form-control form-select"></select>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Hizmet (Ders) Seç</label>
                        <select asp-for="HizmetId" asp-items="ViewBag.HizmetId" class="form-control form-select"></select>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Eğitmen Seç</label>
                        <select asp-for="EgitmenId" asp-items="ViewBag.EgitmenId" class="form-control form-select"></select>
                    </div>

                    <button type="submit" class="btn btn-success w-100 rounded-pill">Kaydet ve Tabloya Ekle</button>
                    <a asp-action="Program" class="btn btn-link w-100 mt-2">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>