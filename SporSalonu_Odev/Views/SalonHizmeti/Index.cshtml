@model IEnumerable<SporSalonu_Odev.Models.SalonHizmeti>

@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div style="background-color: #f8a5c2; padding-top: 120px; padding-bottom: 40px; margin-top: -50px; border-bottom-left-radius: 30px; border-bottom-right-radius: 30px;">
    <div class="container d-flex justify-content-between align-items-center">
        <div>
            <h2 class="text-white fw-bold m-0" style="text-shadow: 0 2px 5px rgba(0,0,0,0.1);">🛠️ Hizmet Yönetimi</h2>
            <p class="text-white m-0 small opacity-75">Spor salonundaki dersleri ve ücretleri buradan yönet.</p>
        </div>
        <a asp-action="Create" class="btn btn-light text-primary fw-bold rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg"></i> Yeni Hizmet Ekle
        </a>
    </div>
</div>

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4" style="margin-top: -60px;">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="p-4 text-secondary small text-uppercase">Hizmet Adı</th>
                        <th class="p-4 text-secondary small text-uppercase">Süre</th>
                        <th class="p-4 text-secondary small text-uppercase">Ücret</th>
                        <th class="p-4 text-end text-secondary small text-uppercase">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center p-5 text-muted">
                                <h5>Henüz hiç hizmet eklenmemiş.</h5>
                                <p>Yukarıdaki butona basarak ilk dersi ekle!</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="p-4 fw-bold text-dark">@item.HizmetAdi</td>
                                <td class="p-4"><span class="badge bg-secondary rounded-pill">@item.SureDakika dk</span></td>
                                <td class="p-4 text-success fw-bold">@item.Ucret ₺</td>
                                <td class="p-4 text-end">
                                    <a asp-action="Edit" asp-route-id="@item.HizmetId" class="btn btn-sm btn-outline-warning me-1 rounded-pill px-3">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@item.HizmetId" class="btn btn-sm btn-outline-danger rounded-pill px-3">Sil</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>